<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Pantalla de carga-->
    <style name="LaunchScreen" parent="Theme.PlanID">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>
    <!-- Base application theme. -->
    <style name="Theme.PlanID" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primario</item>
        <item name="colorPrimaryVariant">@color/primario_variante</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/fondo_variante</item>
        <item name="colorSecondaryVariant">@color/fondo</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="textInputStyle">@style/Widget.PlanID.TextInputLayout</item>

        <item name="backgroundTint">@color/primario</item>
    </style>

    <style name="Widget.PlanID.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

</resources>