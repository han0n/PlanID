<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:backgroundTintMode="multiply"
        android:backgroundTint="@color/fondo"
        android:background="@drawable/project_paper_repeat">

        <!--Actividad y Descripción-->
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/vistaActividad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Título de la nota"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/vistaDescripcion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Descripción de la nota\n..."
                android:textSize="16sp"
                android:ellipsize="marquee"/>

        </LinearLayout>

        <TextView
            android:id="@+id/vistaHora"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="00 : 00"
            android:textSize="26sp"
            android:gravity="center"/>

    </LinearLayout>


</androidx.cardview.widget.CardView>