<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="@color/fondo">


    <RelativeLayout
        android:id="@+id/cabecera"
        android:layout_width="match_parent"
        android:layout_height="230dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:background="@drawable/stamp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/logo"
            android:gravity="center"
            android:text="identifícate"
            android:fontFamily="monospace"
            android:textSize="26sp"/>

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@+id/cabecera">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--Campo del email-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/campoEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:startIconDrawable="@drawable/ic_email">
                <EditText
                    android:id="@+id/txtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cardview_shadow_end_color"
                    android:hint="e-mail"
                    android:inputType="textEmailAddress"/>

            </com.google.android.material.textfield.TextInputLayout>

            <!--Campo de la contraseña-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/campoPswd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                android:layout_below="@+id/campoEmail"
                android:layout_marginTop="10dp"
                app:startIconDrawable="@drawable/ic_lock">
                <EditText
                    android:id="@+id/txtPswd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cardview_shadow_end_color"
                    android:hint="contraseña"
                    android:inputType="textPassword"/>

            </com.google.android.material.textfield.TextInputLayout>

            <!--Botón de Login-->
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/campoPswd"
                android:layout_marginTop="20dp"
                android:text="Acceder"
                android:focusable="false"/>

            <!--Para el registro de un nuevo usuario-->
            <TextView
                android:id="@+id/txtReg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/btnLogin"
                android:gravity="center"
                android:padding="20dp"
                android:text="¿Eres nuevo? Regístrate"
                android:focusable="false"/>

        </RelativeLayout>
    </ScrollView>



</RelativeLayout>